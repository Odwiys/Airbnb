<div class="container">
  <%# Header component here %>
  <h1><%= @listing.name %></h1>

  <div class="header-row">
    <p> <i class="fa-solid fa-star"></i> <%= "4.92 · Superhost · " + @listing.location %></p>
    <p>
      <button type="button" class="btn btn-outline-dark">
        <i class="fa-solid fa-share"></i> Share
      </button>

      <button type="button" class="btn btn-outline-dark">
        <i class="fa-regular fa-heart"></i> Save
      </button>
    </p>
  </div>

  <%# Listing Images here %>
  <div class="images--flex p-1">
      <%= cl_image_tag @listing.images[0].key, style:'object-fit: cover;'%>
    <div class="images--flex__inner">
      <%= cl_image_tag @listing.images[0].key, style:'object-fit: cover;'%>
      <%= cl_image_tag @listing.images[0].key, style:'object-fit: cover;'%>
